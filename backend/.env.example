# Backend Environment Variables

# App Settings
APP_NAME=Speechix
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/speechix
DATABASE_TEST_URL=postgresql://postgres:postgres@localhost:5432/speechix_test

# JWT Authentication
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Redis (for background tasks)
REDIS_URL=redis://localhost:6379/0

# File Storage (local or s3)
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./data/storage

# AWS S3 (if using S3 for storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION=us-east-1

# Email Settings (for password reset, etc.)
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# DEFAULT_FROM_EMAIL=noreply@example.com

# TTS Service Configuration
# Add any TTS-specific configuration here
# TTS_SERVICE=elevenlabs
# ELEVENLABS_API_KEY=your-elevenlabs-api-key
